{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
},
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018
      },
  "rules": {
    "indent": ["error", 2, {
      "SwitchCase": 1,
      "ignoredNodes": ["TemplateLiteral","comments"]
    }],
    "react/display-name": "off"
  }
  // add other ESLint configurations here
}
